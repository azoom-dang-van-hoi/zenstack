{
    "name": "@azoom/zenstack-runtime",
    "displayName": "ZenStack Runtime Library",
    "version": "0.0.10",
    "description": "Runtime of ZenStack for both client-side and server-side environments.",
    "repository": {
        "type": "git",
        "url": "https://github.com/azoom-dang-van-hoi/zenstack"
    },
    "scripts": {
        "clean": "rimraf dist",
        "build": "pnpm lint --max-warnings=0 && pnpm clean && tsc && tsup-node --config ./tsup-browser.config.ts && tsup-node --config ./tsup-cross.config.ts && copyfiles ./package.json ./README.md ../../LICENSE dist && copyfiles -u1 'res/**/*' dist && pnpm pack dist --pack-destination '../../../.build'",
        "watch": "concurrently \"tsc --watch\" \"tsup-node --config ./tsup-browser.config.ts --watch\" \"tsup-node --config ./tsup-cross.config.ts --watch\"",
        "lint": "eslint src --ext ts",
        "prepublishOnly": "pnpm build"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "default": "./dist/index.js"
        },
        "./package.json": {
            "default": "./dist/package.json"
        },
        "./zod": {
            "default": "./dist/zod/index.js"
        },
        "./zod/input": {
            "default": "./dist/zod/input.js"
        },
        "./zod/models": {
            "default": "./dist/zod/models.js"
        },
        "./zod/objects": {
            "default": "./dist/zod/objects.js"
        },
        "./browser": {
            "types": "./dist/browser/index.d.ts",
            "import": "./dist/browser/index.mjs",
            "require": "./dist/browser/index.js",
            "default": "./dist/browser/index.js"
        },
        "./cross": {
            "types": "./dist/cross/index.d.ts",
            "import": "./dist/cross/index.mjs",
            "require": "./dist/cross/index.js",
            "default": "./dist/cross/index.js"
        }
    },
    "publishConfig": {
        "directory": "dist",
        "linkDirectory": true
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.2",
        "bcryptjs": "^2.4.3",
        "buffer": "^6.0.3",
        "change-case": "^4.1.2",
        "colors": "1.4.0",
        "decimal.js": "^10.4.2",
        "deepcopy": "^2.1.0",
        "lower-case-first": "^2.0.2",
        "pluralize": "^8.0.0",
        "semver": "^7.5.2",
        "superjson": "^1.11.0",
        "tiny-invariant": "^1.3.1",
        "tslib": "^2.4.1",
        "upper-case-first": "^2.0.2",
        "uuid": "^9.0.0",
        "zod": "^3.22.4",
        "zod-validation-error": "^1.5.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/pluralize": "^0.0.29",
        "@types/semver": "^7.3.13",
        "@types/uuid": "^8.3.4"
    }
}
